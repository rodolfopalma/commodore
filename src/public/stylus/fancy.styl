// Lightbox styles
.lightbox_wrapper
	background rgba(0,0,0,0.2)
	width 100%
	height 100%
	position absolute
	top 0
	left 0

	.lightbox_inner
		background rgba(0,0,0,0.35)
		width 50%
		margin 20px auto 0 auto
		padding 30px

	.lightbox_content
		background rgba(255,255,255,1)
		padding 10px 20px 20px 20px

		h3
			text-align center

.lightbox_inner, .lightbox_content
	border-radius 5px